<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_containers"
    android:orientation="vertical"
    android:elevation="2dp"
    android:layout_margin="6dp"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_li_rating_rater_name"
        tools:text="User Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/rb_li_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:id="@+id/tv_li_rating_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="12/25/19" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_li_rating_desc"
        tools:text="User didn't say nay thing "
        android:layout_width="match_parent"
        android:maxLength="500"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>

