    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="16dp"
        android:text="Login"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!--   <View
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:text="phone number"
            android:textColor="@color/text_dark"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.rilixtech.CountryCodePicker
                android:id="@+id/ccp_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_info_edit_text"
                android:gravity="center"
                android:paddingStart="2dp"
                android:paddingLeft="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:ccp_hideNameCode="true"
                app:ccp_textSize="18sp" />

            <EditText
                android:id="@+id/et_login_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/bg_info_edit_text"
                android:drawableRight="@drawable/ic_call_black_24dp"
                android:drawablePadding="20dp"
                android:hint="1234567890"
                android:imeOptions="actionGo"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_wrong_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="the phone numebr provided is not registered. Tap create acccount" />


    </LinearLayout>


    <Button
        android:id="@+id/bt_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_button_solid"
        android:text="login"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bt_login_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button_stroked"
        android:text="Register" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Need help?"
        android:textColor="#1976D2" />


</LinearLayout>
