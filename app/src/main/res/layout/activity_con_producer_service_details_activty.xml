<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Consumer.Activities.ConProducerServiceDetailsActivty">

    <ImageView
        android:id="@+id/iv_con_prod_goods_detail_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:padding="16dp"

        android:scaleType="fitCenter"
        android:src="@drawable/ic_broken_image_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Title"
            android:textColor="#000"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_con_prod_goods_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"

            android:maxLines="1"
            android:padding="6dp"
            android:text="Ashir mehmood" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Detail"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_con_prod_goods_detail_desc"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:maxLines="5"
            android:padding="6dp"
            android:text="e.g. this is a dairy product adn freshly picked up healthy product" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Price"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_con_prod_goods_detail_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="6dp"
            android:text="e.g. 100" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Type"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_con_prod_goods_detail_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="6dp"
            android:text="e.g. dairy" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_con_prod_goods_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_button_solid"

        android:drawableLeft="@drawable/ic_add_white_24dp"
        android:drawablePadding="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Add to Daily Demand"
        android:textColor="#ffffff" />

</LinearLayout>