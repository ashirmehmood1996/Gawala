<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Producer.Activities.ProducerServiceDetailsActivity">

    <TextView
        android:padding="10dp"
        android:id="@+id/tv_prod_goods_detail_name"
        android:layout_width="match_parent"
        tools:text="name"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:id="@+id/tv_prod_goods_detail_desc"
        android:textSize="18sp"
        android:layout_width="match_parent"
        tools:text="descriptionasdasdas"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:id="@+id/tv_prod_goods_detail_price"
        android:layout_width="match_parent"
        tools:text="price"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:id="@+id/tv_prod_goods_detail_type"
        android:textSize="18sp"
        android:layout_width="match_parent"
        tools:text="type"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_prod_goods_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"

            android:background="@drawable/bg_button_solid_red"
            android:text="delete item"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bt_prod_goods_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_button_solid"
            android:text="Edit Item"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>