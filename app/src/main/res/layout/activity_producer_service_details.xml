<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Provider.Activities.ProducerServiceDetailsActivity">

    <ImageView
        android:id="@+id/iv_prod_goods_detail_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:padding="16dp"

        android:scaleType="fitCenter"
        android:src="@drawable/ic_broken_image_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Title"
            android:textColor="#000"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_prod_goods_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"

            android:maxLines="1"
            android:padding="6dp"
            android:text="Ashir mehmood" />

        <ImageButton
            android:id="@+id/ib_prod_goods_detail_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="6dp"
            android:background="@drawable/bg_bt_round"
            android:contentDescription="Tap to Edit Location"
            android:elevation="2dp"
            android:padding="4dp"

            android:src="@drawable/ic_mode_edit_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Detail"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_prod_goods_detail_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:maxLines="5"
            android:padding="6dp"
            android:text="e.g. this is a dairy product adn freshly picked up healthy product" />


        <ImageButton
            android:id="@+id/ib_prod_goods_detail_edit_detail"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"

            android:background="@drawable/bg_bt_round"
            android:contentDescription="Tap to Edit Location"
            android:elevation="2dp"
            android:padding="4dp"
            android:src="@drawable/ic_mode_edit_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Price"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_prod_goods_detail_price"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="6dp"
            android:text="e.g. 100" />


        <ImageButton
            android:id="@+id/ib_prod_goods_detail_edit_price"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="@drawable/bg_bt_round"
            android:contentDescription="Tap to Edit Location"
            android:elevation="2dp"
            android:padding="4dp"
            android:src="@drawable/ic_mode_edit_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_containers"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="6dp"
            android:text="Type"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_prod_goods_detail_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="6dp"
            android:text="e.g. dairy" />


        <ImageButton
            android:id="@+id/ib_prod_goods_detail_edit_type"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="@drawable/bg_bt_round"
            android:contentDescription="Tap to Edit Location"
            android:elevation="2dp"
            android:padding="4dp"
            android:src="@drawable/ic_mode_edit_black_24dp" />

    </LinearLayout>


    <Button
        android:id="@+id/bt_prod_goods_details_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_solid_red"
        android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
        android:drawablePadding="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="delete item"
        android:textColor="#ffffff" />


</LinearLayout>