<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_li_con_prod_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contacts_list_item_background"
    android:clickable="true"
    android:padding="16dp">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civ_li_con_prod_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:elevation="2dp"
        app:civ_border="false"
        android:src="@drawable/ic_person_black_24dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_li_con_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="name " />


        <TextView
            android:id="@+id/tv_li_con_prod_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="2dp"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            tools:text="location" />
    </LinearLayout>
</LinearLayout>
