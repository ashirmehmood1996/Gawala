<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:layout_below="@id/ll_li_con_prod_container"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/text_light" />

    <LinearLayout
        android:id="@+id/ll_li_con_prod_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contacts_list_item_background"
        android:clickable="true"
        android:padding="16dp">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civ_li_transporter_picture"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="2dp"
            android:elevation="2dp"
            android:src="@drawable/ic_person_black_24dp"
            app:civ_border="false" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_li_transporter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="2dp"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:text="firstname Lastname  " />


            <TextView
                android:id="@+id/tv_li_transporter_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2dp"
                android:textColor="@color/text_light"
                android:textSize="14sp"
                tools:text="+92123456789" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_li_transporter_assign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_button_solid_accent"
            android:text="assign"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>
