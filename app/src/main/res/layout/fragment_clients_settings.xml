<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_frag_client_settings_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/transparent_background"
            android:padding="16dp"

            android:src="@drawable/ic_keyboard_backspace_white_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="start"
            android:text="Settings"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_containers"
        android:orientation="vertical"
        android:padding="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bg_containers"
            android:elevation="6dp"
            android:orientation="horizontal"
            android:padding="6dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:text="Alert Notification Timing"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_frag_client_settings_notification_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    tools:text="Notify me abouty 3 minutes before delivery" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_frag_client_settings_edit_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:background="@drawable/bg_bt_round"
                android:elevation="2dp"
                android:padding="10dp"
                android:src="@drawable/ic_mode_edit_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bg_containers"
            android:elevation="6dp"
            android:orientation="horizontal"
            android:padding="6dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Alert Notification Type"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_frag_client_settings_notification_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    tools:text="Aggressive" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_frag_client_settings_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:background="@drawable/bg_bt_round"
                android:elevation="2dp"
                android:padding="10dp"
                android:src="@drawable/ic_remove_red_eye_black_24dp" />
            <ImageButton
                android:id="@+id/ib_frag_client_settings_edit_notification_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:background="@drawable/bg_bt_round"
                android:elevation="2dp"
                android:padding="10dp"
                android:src="@drawable/ic_mode_edit_black_24dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>